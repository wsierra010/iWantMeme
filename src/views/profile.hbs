<div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-md-10 mt-5 pt-5">
          <div class="row z-depth-3">
            <div class="col-sm-4 bg-info rounded-left">
              <div class="card-block text-center text-white">
                <i class="fas fa-user-tie fa-7x mt-5"></i>
                <h2 class="font-weight-bold mt-4">{{user.username}}</h2>
                <p>Profile</p>
              </div>
            </div>
            <div class="col-sm-8 bg-white rounded-right">
              <h3 class="mt-3 text-center">Information</h3>
              <hr class="beige-primary mt-0 w-25">
              <div class="row">
                <div class="col-sm-6 ms-5">
                  <p class="font-weight-bold">First Name:</p>
                  <h6 class="text-muted">{{user.first_name}}</h6>
                </div>
                <div class="col-sm-6 ms-5">
                  <p class="font-weight-bold">Last Name</p>
                  <h6 class="text-muted">{{user.last_name}}</h6>
                </div>
                <div class="col-sm-6 pt-5">
                  <p class="font-weight-bold">Email:</p>
                  <h6 class="text-muted">{{user.email}}</h6>
                </div>
                <div class="col-sm-6 pt-5">
                  <p class="font-weight-bold">Phone:</p>
                  <h6 class="text-muted">{{user.phone_number}}</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>